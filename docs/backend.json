{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID from Firebase Auth." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "displayName": { "type": "string", "description": "The user's display name." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "role": {
          "type": "string",
          "description": "The user's role in the system.",
          "enum": ["admin", "employee", "client", "applicant"]
        }
      },
      "required": ["uid", "email", "role"]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a project in the system.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "priority": { "type": "string", "enum": ["low", "medium", "high"] },
        "estimatedHours": { "type": "number" },
        "startDate": { "type": "string", "format": "date-time" },
        "endDate": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["active", "on-hold", "completed", "archived"] },
        "leadAssignee": { "type": "string", "description": "User ID of the lead." },
        "virtualAssistants": { "type": "array", "items": { "type": "string" } },
        "freelancers": { "type": "array", "items": { "type": "string" } },
        "clientId": { "type": "string", "description": "ID of the associated client." }
      },
      "required": ["title", "status", "clientId"]
    },
    "Client": {
      "title": "Client",
      "description": "Represents a client.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["name"]
    },
    "Update": {
      "title": "Daily Update",
      "description": "A daily progress update for a project.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "userId": { "type": "string" },
        "content": { "type": "string", "description": "Summary of the update." },
        "checklist": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "item": { "type": "string" },
              "completed": { "type": "boolean" }
            },
            "required": ["item", "completed"]
          }
        },
        "nextPlan": { "type": "string" },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" }
            },
            "required": ["name", "url"]
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["projectId", "userId", "content", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores individual user profiles."
    },
    "/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores all projects."
    },
    "/clients/{clientId}": {
      "schema": { "$ref": "#/entities/Client" },
      "description": "Stores client information."
    },
    "/updates/{updateId}": {
      "schema": { "$ref": "#/entities/Update" },
      "description": "Stores all daily updates for all projects."
    }
  }
}
